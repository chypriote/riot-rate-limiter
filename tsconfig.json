{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "declaration": true,
    "noImplicitAny": false,
    "rootDirs": [
      "src",
      "node_modules"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
